<% if user_signed_in? %>
  <nav class="navbar navbar-dark bg-inverse" id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <a href="#">Dashboard</a>
      </li>
      <% navigation_links.each do |name, attributes| %>
        <li>
          <%= link_to attributes[:link], method: attributes[:method] || 'get' do %>
            <div>
              <span class="fa fa-<%= attributes[:icon] %>"></span> <%= name %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>

  <nav class="navbar navbar-dark bg-inverse navbar-fixed-bottom navbar-side-scroll hidden-md-up">
    <ul class="nav nav-pills">
      <% navigation_links.each do |name, attributes| %>
        <li class="nav-item">
          <%= link_to attributes[:link], method: attributes[:method] || 'get', class: 'nav-item text-center' do %>
            <span class="fa fa-fw fa-<%= attributes[:icon] %>"></span></br>
            <small><%= name %></small>
          <% end %>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>