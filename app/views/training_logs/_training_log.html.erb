<div class="col-xs">
  <div class="card text-xs-center">
    <div class="card-header">
      <%= training_log.root_domain %>
      <span class="tag tag-default" %><%= training_log.trained_status %></span>
    </div>
    <div class="card-block">
      <%= link_to 'View Link', training_log.url, class: "btn btn-info" %>
      <% unless training_log.trained? %>
        <%= link_to 'Train', train_domain_path(training_log), class: "btn btn-primary" %>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      added <%= time_ago_in_words(training_log.created_at) %> ago
    </div>
  </div>
</div>