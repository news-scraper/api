<% content_for :header_title do %>News Articles<% end %>

<% @news_articles.in_groups_of(3).each do |group| %>
  <div class="row">
    <%= render group.reject(&:nil?) %>
  </div>
<% end %>

<div class="text-center">
  <%= will_paginate @news_articles, renderer: Pagination::Bootstrap4Renderer %>
  <p><%= page_entries_info @news_articles %></p>
</div>
